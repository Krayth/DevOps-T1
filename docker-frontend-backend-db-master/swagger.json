{
    "openapi": "3.0.0",
    "info": {
      "title": "API de Lista de Tarefas",
      "description": "Uma API simples para gerenciar itens de tarefas",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:3001"
      }
    ],
    "paths": {
      "/api/todos": {
        "get": {
          "summary": "Lista todos os itens de tarefas",
          "responses": {
            "200": {
              "description": "Um array JSON de itens de tarefas",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "1"
                        },
                        "titulo": {
                          "type": "string",
                          "example": "Comprar mantimentos"
                        },
                        "completo": {
                          "type": "boolean",
                          "example": false
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Cria um novo item de tarefa",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "titulo": {
                      "type": "string",
                      "example": "Comprar mantimentos"
                    }
                  },
                  "required": ["titulo"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Item de tarefa criado com sucesso"
            }
          }
        }
      }
    }
  }